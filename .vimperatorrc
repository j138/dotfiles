" Toggle Autopagerize {{{
javascript <<EOM
let (evaluateXPath = util.evaluateXPath || buffer.evaluateXPath) {
    commands.addUserCommand(
        ['autopagerize'],
        'Toggle AutoPagerize',
        function (args) {
            buffer.followLink(
                evaluateXPath('id("autopagerize_help")/div/a[@class="autopagerize_link"]').snapshotItem(0)
            );
        },
        {},
        true
    );
}
EOM
" }}}

echo "done."

