# アカウント設定
set from = "yourself@gmail.com"
set realname = "John Smith"

# Gmailアカウント設定
set imap_user = "yourself@gmail.com"
set imap_pass = "password"

# リモートフォルダの設定
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent"
set read_inc=100
#set trash = "imaps://imap.gmail.com/[Gmail]/Trash"

# メールボックス（ラベル）の設定
mailboxes !=ml-lug-list =ml-lug-org =[Gmail]/Drafts "=[Gmail]/All Mail"

# ローカルフォルダの設定
#set header_cache = ~/.mutt/cache/headers
#set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

# SMTP
#set smtp_url = "smtp://j138m@smtp.gmail.com:587/"
#set smtp_pass = "qbsm59ivggg"

# secure session
set move = no
set imap_keepalive = 900

# 外部エディタ
set editor = 'vim'

# htmlメール
auto_view text/html

# 文字コード関連
#set file_charset = "iso-2022-jp:euc-jp:shift_jis:utf-8"
#set assumed_charset="iso-2022-jp:euc-jp:shift-jis:utf-8"
set charset="utf-8"
set send_charset="us-ascii:iso-2022-jp"

# Ctrl-bにurlviewをバインド
macro index \cb "|urlview\n" "open url with urlview"
macro pager \cb "|urlview\n" "open url with urlview"

# カラースキームを変更
#color normal white default
#color hdrdefault cyan default
#color header yellow default "^(Subject|From|Date):"
#color body magenta default [_a-z\.A-Z0-9-]+@[a-zA-Z0-9\./\-]+
#color body magenta default (http|ftp)://[_a-zA-Z0-9\./~\-]+
#color tilde cyan default
#color status white black

bind editor <space> noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"

